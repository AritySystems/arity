@using AritySystems.Data;
@{
    ViewBag.Title = "MakeOrder";
}
<style>
    span.child-product {
        padding-left: 30px;
    }
</style>
<h2>MakeOrder</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="">Select Product</label>
                @Html.DropDownList("ProductId", ViewBag.Products as SelectList, "-- Select Product--", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="">Product Quantity</label>
                @Html.TextBox("ProductQty", 0, new { @type = "number", @class = "form-control" })
            </div>
            <div class="form-group">
                <label class="">Product Price($) - <span id="ProductDollar_Price" style="font-size:16px;"></span></label>
            </div>
            <div class="col-md-2 col-md-offset-5 form-group">
                <button class="btn btn-primary" id="btnAddToCart">Add To Cart</button>
            </div>
        </div>
        <div class="row" id="lineItem" style="display:none;">
            <div style="">
                @using (Html.BeginForm("MakeOrder", "Order", FormMethod.Post))
            {
                    <table class="table table-striped">
                        <tr>
                            <th>Product Name</th>
                            <th align="center">Quantity</th>
                            <th align="center">Price($)</th>
                            <th align="center">Total($)</th>
                            <th align="center">&nbsp;</th>
                        </tr>
                        <tbody id="lstProducts"></tbody>
                    </table>
                    <div class="col-md-2 col-md-offset-10">
                        Order Total : <span class="order-total"></span>
                    </div>
                    <div class="col-md-2 col-md-offset-5">
                        <button type="submit" class="btn btn-success">Place Order</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    window.productCounter = 1;
    $("#ProductId").on("change", function () {
        if ($(this).val() != null) {
            $.ajax({
                url: "@Url.Action("GetProductDetail","Order")",
                method: "GET",
                data: { id: $("#ProductId").val() },
                dataType: "json"
            }).done(function (response) {
                if (response != null) {
                    $("#ProductDollar_Price").text("$" + response.Dollar_Price);
                }
            }).fail(function (jqXHR, textStatus) {
                console.log("Request failed: " + textStatus);
            });
        }
    });

    $("#btnAddToCart").on("click", function () {
        $.ajax({
            url: "@Url.Action("AddProductToCart","Order")",
            method: "POST",
            data: { id: $("#ProductId").val(), qty: $("#ProductQty").val() },
            dataType: "json"
        }).done(function (response) {
            if (response.data != null) {
                $.each(response.data, function (e, data) {
                    $("#lstProducts").append("<tr id='tr_" + window.productCounter + "'><td><input type='hidden' name='productId_" + window.productCounter + "' value='" + data.Id + "'/><span class='" + (data.Parent_Id > 0 ? "child-product" : "") + "'> " + data.English_Name + "</span></td><td><input style='text-align:center;' onkeyup='qtyTouched(this);' type='number' value='" + data.Quantity + "' name='qty_" + window.productCounter + "' /></td><td><input type='hidden' value='" + data.Dollar_Price + "' id='spnPrice_" + window.productCounter + "'/>$" + data.Dollar_Price + "</td><td><span id='total_" + window.productCounter + "' class='itemTotal'>$" + (data.Dollar_Price * data.Quantity) + "</span></td><td align='center'><i class='fa fa-remove' style='color:red;cursor:pointer;' onclick='removeItem(" + window.productCounter + ")'></i></td></tr>")
                    window.productCounter = window.productCounter + 1;
                });
                var OrderTotal = 0;
                $(".itemTotal").each(function () {
                    OrderTotal = OrderTotal + parseInt($(this).text().replace('$', ''));
                });
                $(".order-total").html('$' + OrderTotal);
            }
        }).fail(function (jqXHR, textStatus) {
            console.log("Request failed: " + textStatus);
        });
        $("#lineItem").show();
    });

    function qtyTouched(e) {
        if ($(e).val() == '')
            $(e).val("0");
        var qty = parseInt($(e).val());
        var name = $(e).attr('name').split('_')[1];
        var price = parseInt($("#spnPrice_" + name).val());
        $("#total_" + name).html('$' + (price * qty));
        var OrderTotal = 0;
        $(".itemTotal").each(function () {
            OrderTotal = OrderTotal + parseInt($(this).text().replace('$', ''));
        });
        $(".order-total").html('$' + OrderTotal);

    }

    function removeItem(id) {
        if (confirm("Are you sure you want to remove this item from your cart?")) {
            $("#tr_" + id).fadeOut(300, function () { $(this).remove(); });
        }
        return true;
    }



</script>
